datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model GitHubAction {
  id        String   @id
  type      String
  title     String
  status    String
  branch    String
  commitId  String
  createdAt DateTime
  updatedAt DateTime
  Bubble    Bubble   @relation(fields: [bubbleId], references: [id])
  bubbleId  String   @unique
}

model RailwayDeployment {
  id        String   @id
  title     String
  status    String
  branch    String
  commitId  String
  createdAt DateTime
  updatedAt DateTime
  Bubble    Bubble   @relation(fields: [bubbleId], references: [id])
  bubbleId  String   @unique
}

model Bubble {
  id                String             @id
  type              String
  index             Int
  content           String
  createdAt         DateTime
  App               App                @relation(fields: [appId], references: [id])
  appId             String
  GitHubAction      GitHubAction?
  RailwayDeployment RailwayDeployment?
}

model App {
  id               String   @id
  userId           String
  index            Int
  name             String
  status           String
  environmentId    String?
  projectId        String?
  serviceId        String?
  createdAt        DateTime
  statusUpdatedAt  DateTime
  githubUpdatedAt  DateTime
  railwayUpdatedAt DateTime
  bubbles          Bubble[]
}
